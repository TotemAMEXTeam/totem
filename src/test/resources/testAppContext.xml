<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    
    <context:component-scan base-package="net"/>
    <context:annotation-config />
    
    <bean id="dateUtils" class="net.twilightstudios.amex.totem.utils.DateUtils" />
    
    <bean id="frame" class="javax.swing.JFrame"/>
    
    <bean id="textArea" class="javax.swing.JTextArea" />
    
    <!-- BEANS PARA EL TECLADO -->
    <bean id="keyboardPanel" class="net.twilightstudios.amex.totem.view.component.keyboard.KeyboardTotemAmex">
    	<property name="text" ref="textArea"/>
    	<property name="keyboardMin" ref="keyboardMin"/>
    	<property name="keyboardMay" ref="keyboardMay"/>
    	<property name="keyboardSp1" ref="keyboardSp1"/>
    	<property name="keyboardSp2" ref="keyboardSp2"/>
    </bean>
    
    <bean id="keyboardMin" class="net.twilightstudios.amex.totem.view.component.keyboard.KeyboardMin">
    	<constructor-arg index="0" ref="keyboardPanel"/>
    	<constructor-arg index="1" ref="textArea"/>
    </bean>
    <bean id="keyboardMay" class="net.twilightstudios.amex.totem.view.component.keyboard.KeyboardMay">
    	<constructor-arg index="0" ref="keyboardPanel"/>
    	<constructor-arg index="1" ref="textArea"/>
    </bean>
    <bean id="keyboardSp1" class="net.twilightstudios.amex.totem.view.component.keyboard.KeyboardSpecials1">
    	<constructor-arg index="0" ref="keyboardPanel"/>
    	<constructor-arg index="1" ref="textArea"/>
    </bean>
    <bean id="keyboardSp2" class="net.twilightstudios.amex.totem.view.component.keyboard.KeyboardSpecials2">
    	<constructor-arg index="0" ref="keyboardPanel"/>
    	<constructor-arg index="1" ref="textArea"/>
    </bean>
    
    <bean id="flightInfoPanel" class="net.twilightstudios.amex.totem.view.component.panel.FlightInfoPanel">
    	<constructor-arg index="0" ref="frame"/>
    	<property name="flightInfoPanelUtils" ref="flightInfoPanelUtils"/>
    </bean>
    
    <bean id="flightInfoPanelUtils" class="net.twilightstudios.amex.totem.view.component.panel.utils.FlightInfoPanelUtils">
    	<property name="dateUtils" ref="dateUtils"/>
    </bean>
    
    <!-- SELECTOR DE CATEGORÍA -->
    <bean id="categorySelectorPanel" class="net.twilightstudios.amex.totem.view.component.panel.CategorySelectorPanel">
    	<constructor-arg index="0" ref="frame"/>
    	<property name="restaurantsButton" ref="restaurantsButton"/>
    	<property name="artCultureButton" ref="artCultureButton"/>
    	<property name="hotelsButton" ref="hotelsButton"/>
    	<property name="mapButton" ref="mapButton"/>
    </bean>
    
    <bean id="restaurantsButton" class="net.twilightstudios.amex.totem.view.component.button.RestaurantsButton">
    	<constructor-arg index="0" ref="categorySelectorPanel"/>
    	<property name="urlIcon" value="http://cdns2.freepik.com/foto-gratis/_318-53716.jpg" />
    </bean>
    
    <bean id="artCultureButton" class="net.twilightstudios.amex.totem.view.component.button.ArtCultureButton">
    	<constructor-arg index="0" ref="categorySelectorPanel"/>
    	<property name="urlIcon" value="http://comps.canstockphoto.es/can-stock-photo_csp23872436.jpg" />
    </bean>
    
    <bean id="hotelsButton" class="net.twilightstudios.amex.totem.view.component.button.HotelsButton">
    	<constructor-arg index="0" ref="categorySelectorPanel"/>
    	<property name="urlIcon" value="https://t2.ftcdn.net/jpg/00/49/95/03/240_F_49950377_UhNFZkmlu6I5Po5qaxMm91IAp672RXCm.jpg" />
    </bean>
    
    <bean id="mapButton" class="net.twilightstudios.amex.totem.view.component.button.MapButton">
    	<constructor-arg index="0" ref="categorySelectorPanel"/>
    	<property name="urlIcon" value="http://icons.iconarchive.com/icons/alecive/flatwoken/512/Apps-Google-Maps-icon.png" />
    </bean>
    
    
</beans>